<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFilms"
        tools:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/tvTitle"
        android:layout_toStartOf="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/tvOverview"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Wonder woman"
        android:id="@+id/tvTitle"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="146dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="An Amazon princess comes to the world of Man to become the greatest of the female superheroes."
        android:id="@+id/tvOverview"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/tvTitle"
        android:layout_toEndOf="@+id/ivFilms"
        android:layout_marginTop="3dp"
        android:paddingLeft="10dp"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle" />

    <ImageButton
        android:id="@+id/searchImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"
        android:layout_gravity="top"
        android:layout_alignTop="@+id/ivFilms"
        android:scaleX="1"
        android:scaleY="1"
        android:layout_above="@+id/tvOverview"
        android:layout_alignRight="@+id/ivFilms"
        android:layout_alignEnd="@+id/ivFilms" />

</RelativeLayout>