<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFilms"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:src="@mipmap/ic_launcher"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Wonder woman"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivFilms"
        android:layout_toEndOf="@+id/ivFilms"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/transparent"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="An Amazon princess comes to the world of Man to become the greatest of the female superheroes."
        android:id="@+id/tvOverview"
        android:onClick="onAdd"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/ivFilms"
        android:layout_toEndOf="@+id/ivFilms"
        android:textColor="@android:color/background_light"
        android:layout_margin="5dp"
        android:paddingLeft="10dp" />

</RelativeLayout>